<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="background-color:rgb(14, 62, 152); color: white;">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="background-color:rgb(14, 62, 152); color: white;">
      <%= error %>
      <button type="button" class="btn-close" style="filter: invert(1);" data-bs-dismiss="alert" aria-label="Close" ></button>
    </div>
  <% } %>
  