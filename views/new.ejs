 <%- layout("/layouts/boilerplate.ejs") %>
 <body>
     <div class="row"></div>
     <div class="col-8 offset-2">
         <br>
         <form method="post" action="/movies" novalidate class="needs-validation" enctype="multipart/form-data">
             <div class="mb-2">
                 <label for="title" class="form-label">Title</label>
                 <input placeholder="Title" name="title" type="text" class="form-control" required>
                 <div class="invalid-feedback">
                     Please enter a title.
                 </div>
             </div>
             <div class="mb-2">
                 <label for="description" class="form-label">Description</label>
                 <textarea placeholder="Description" name="description" type="text" class="form-control" required></textarea>
                 <div class="invalid-feedback">
                     Please enter a description.
                 </div>
             </div>
             <div class="mb-2">
                 <label for="actors" class="form-label">Actors</label>
                 <input placeholder="Actors" name="actors" type="text" class="form-control" required>
                 <div class="invalid-feedback">
                     Please enter actors' names.
                 </div>
             </div>
             <div class="mb-2">
                 <label for="url" class="form-label"> Upload Image</label>
                 <input name="url" type="file" class="form-control" required>
                 <div class="invalid-feedback">
                     Please enter a valid URL.
                 </div>
             </div>
             <div class="row">
                 <div class="mb-2 col-md-4">
                     <label for="price" class="form-label">Price</label>
                     <input placeholder="Price" name="price" type="text" class="form-control" required>
                     <div class="invalid-feedback">
                         Please enter a price.
                     </div>
                 </div>
                 <div class="mb-2 col-md-8">
                     <label for="releaseDate" class="form-label">Release Date</label>
                     <input placeholder="Release Date" name="releaseDate" type="date" class="form-control" required>
                     <div class="invalid-feedback">
                         Please enter a release date.
                     </div>
                 </div>
             </div>
             <button class="btn btn-dark add-btn" type="submit">Add</button>
             <br><br><br>
         </form>
     </div>
 </body>
 